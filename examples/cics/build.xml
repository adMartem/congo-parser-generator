<project name="Cics Parser" default="compile">
  <target name="clean">
    <delete dir="org" />
    <delete dir="cicsparser" />
    <delete dir="cs-cicsparser" />
  	<delete dir="CardTestsParse.class"/>
    <delete file="CicsParse.class" />
  </target>

  <target name="init">
    <uptodate property="cicsparser.uptodate" targetfile="org/parsers/cics/CicsParser.java">
      <srcfiles dir="." includes="*.ccc" />
    </uptodate>
  </target>

  <target name="parser-gen" depends="init" unless="cicsparser.uptodate">
    <java jar="../../congocc.jar" failonerror="true" fork="true">
      <assertions>
        <enable />
      </assertions>
      <arg value="-n" />
      <arg value="${basedir}/Cics.ccc" />
    </java>
    <java jar="../../congocc.jar" failonerror="true" fork="true">
      <assertions>
        <enable />
      </assertions>
      <arg value="-n" />
      <arg value="${basedir}/CardTests.ccc" />
    </java>
  	<!--
    <java jar="../../congocc.jar" failonerror="true" fork="true">
      <assertions>
        <enable />
      </assertions>
      <arg line="-n -lang python ${basedir}/Cics.ccc" />
    </java>
    <java jar="../../congocc.jar" failonerror="true" fork="true">
      <assertions>
        <enable />
      </assertions>
      <arg line="-n -lang csharp ${basedir}/Cics.ccc" />
    </java>
    -->
  </target>

  <target name="compile" depends="init,parser-gen">
    <javac srcdir="." failonerror="true" classpath="." debug="on" optimize="off" includeantruntime="no" fork="true" />
  </target>

  <target name="test" depends="compile">
    <java fork="true" classpath="." failonerror="true" classname="CardTestsParse">
      <assertions>
        <enable />
      </assertions>
    	<jvmarg value="-agentlib:jdwp=transport=dt_socket,server=y,address=8000,suspend=n"/>
      <arg value="testfiles" />
    </java>
  </target>

  <target name="test-cics" depends="compile">
    <java fork="true" classpath="." failonerror="true" classname="CicsParse">
      <assertions>
        <enable />
      </assertions>
        <jvmarg value="-agentlib:jdwp=transport=dt_socket,server=y,address=8000,suspend=n"/>
      <arg value="testfiles" />
    </java>
  </target>

<!--
  <target name="test-python" depends="parser-gen">
    <exec executable="python3" dir="${basedir}" failonerror="true">
      <arg line="-u cicsparse.py testfiles" />
    </exec>
  </target>
-->
</project>
